<%- include("partials/header") %>

<main class="container py-4">

  <h1>Thèmes</h1>

  <div>

    <!-- On affiche tous les thèmes -->
    <% tags.forEach(tag => { %>
      
      <span class="badge bg-primary p-2 mb-1"><%= tag.name %></span>

      <!-- Si il y a des quizzes associé -->
      <% if (tag.quizzes.length > 0) { %>
       
        <!-- On les affiche -->
        <ul>
          <% tag.quizzes.forEach(quiz => { %>
            <li><a href="/quiz/<%= quiz.id %>"><%= quiz.title %></a></li>
          <% }) %>
        </ul>

      <% } else { %>
        <!-- Si pas de quiz, on affiche autre chose -->
        <p class="ms-2">Aucun quizz dans cette catégorie pour le moment....</p>
      <% } %>

    <% }) %>
  
  </div>

</main>

<%- include("partials/footer") %>
